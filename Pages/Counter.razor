@page "/counter"

<PageTitle>Counter</PageTitle>

<h1>Counter</h1>

<p>curent count:</p>

<button style="width:100px; height:120px;" class="btn btn-primary" @onclick="IncrementCount">@currentCount  </button>

@code {
    private int currentCount = 1;

    private void IncrementCount()
    {
        currentCount = currentCount + 2;
        currentCount = currentCount - 1;
        currentCount = currentCount * 3;

        Console.WriteLine("button clicked with modified value: " + currentCount);
    }
}
